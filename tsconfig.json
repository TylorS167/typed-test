{
  "compilerOptions": {
    "lib": [
      "dom",
      "es5",
      "es2015"
    ],
    "target": "es5",
    "moduleResolution": "node",
    "declaration": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "baseUrl": "./",
    "paths": {
      "@base/*": [
        "./src/*"
      ]
    }
  },
  "include": [
    "src/**/*.ts",
    "test/**/*ts"
  ]
}
