{
  "name": "@typed/test",
  "description": "Simple test framework",
  "repository": "https://github.com/TylorS/typed-test",
  "version": "4.0.0",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "typings": "lib/index.d.ts",
  "bin": {
    "typed-test": "lib/cli.js"
  },
  "author": "Tylor Steinberger <tlsteinberger167@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@types/body-parser": "1.16.5",
    "@types/express": "4.0.37",
    "@types/glob-expand": "0.0.31",
    "@types/node": "8.0.34",
    "@types/rimraf": "2.0.2",
    "@types/tmp": "0.0.33",
    "@types/yargs": "8.0.2",
    "conventional-changelog-cli": "1.3.4",
    "husky": "0.14.3",
    "lint-staged": "4.2.3",
    "prettier": "1.7.4",
    "ts-node": "3.3.0",
    "typescript": "2.5.3",
    "validate-commit-msg": "2.14.0"
  },
  "dependencies": {
    "167": "0.43.0",
    "@most/core": "0.14.0",
    "@most/disposable": "0.13.1",
    "@most/scheduler": "0.13.1",
    "@most/types": "0.11.1",
    "@typed/assertions": "1.1.0",
    "assertion-error-diff": "1.0.0",
    "body-parser": "1.18.2",
    "express": "4.16.2",
    "fork-ts-checker-webpack-plugin": "0.2.8",
    "gaze": "1.1.2",
    "glob-expand": "0.2.1",
    "html-webpack-plugin": "2.30.1",
    "james-browser-launcher": "1.3.1",
    "module-alias": "2.0.1",
    "rimraf": "2.6.2",
    "tmp": "0.0.33",
    "ts-loader": "2.3.7",
    "typed-colors": "1.0.0",
    "typed-figures": "1.0.0",
    "webpack": "3.6.0",
    "webpack-merge": "4.1.0",
    "yargs": "9.0.1"
  },
  "lint-staged": {
    "*.ts": [
      "prettier --write --print-width 100 --tab-width 2 --no-semi --single-quote --trailing-comma es5 --parser typescript",
      "git add"
    ]
  },
  "scripts": {
    "build": "yarn build:commonjs && chmod +x lib/cli.js",
    "build:commonjs": "tsc -P .config/tsconfig.commonjs.json",
    "changelog": "conventional-changelog -i CHANGELOG.md -s -r 0 -p angular",
    "cleanup": "rimraf lib lib.es2015",
    "commit": "git-cz",
    "commitmsg": "validate-commit-msg",
    "postchangelog": "git add CHANGELOG.md && git commit -m 'docs(CHANGELOG): amend changelog'",
    "postversion": "yarn changelog && git push origin master --tags && npm publish",
    "preversion": "npm test && yarn build",
    "release:major": "npm version major -m 'chore(package): v%s'",
    "release:minor": "npm version minor -m 'chore(package): v%s'",
    "test": "yarn test:lint && yarn test:unit",
    "test:browser": "yarn test:unit -- --browser",
    "test:lint": "prettier --write --print-width 100 --tab-width 2 --no-semi --single-quote --trailing-comma es5 --parser typescript 'src/*.ts' 'src/**/*.ts'",
    "test:unit": "yarn build && node lib/cli.js 'src/*.test.ts' 'src/**/*.test.ts' 'test/**/*.ts'"
  }
}
