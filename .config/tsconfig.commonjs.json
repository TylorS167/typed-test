{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "lib": [
      "dom",
      "es5",
      "es2015"
    ],
    "target": "es5",
    "moduleResolution": "node",
    "module": "commonjs",
    "declaration": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "outDir": "../lib"
  },
  "exclude": [
    "../src/**/*.test.ts",
    "../test/**/*.ts"
  ]
}
